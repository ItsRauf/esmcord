{
  "minify": true,
  "jsc": {
    "target": "es2020",
    "loose": true,
    "parser": {
      "syntax": "typescript",
      "dynamicImport": true,
      "tsx": false,
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    }
  },
  "module": {
    "type": "es6",
    "strict": true,
    "lazy": false
  }
}
